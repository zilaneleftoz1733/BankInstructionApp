@model BankInstructionApp.Models.RegisterViewModel

@{
    ViewBag.Title = "Sign Up";
}

<h2>Kullanıcı Kayıt Sayfası</h2>
<div style="margin-top: 20px;"></div>
@using (Html.BeginForm("SignUp", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, "KULLANICI ADI", htmlAttributes: new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div style="margin-top: 20px;"></div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, "E-POSTA", htmlAttributes: new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div style="margin-top: 20px;"></div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, "ŞİFRE", htmlAttributes: new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div style="margin-top: 20px;"></div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </div>
    </div>
</div>
}