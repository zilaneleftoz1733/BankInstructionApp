@model BankInstructionApp.Models.InstructionViewModel
@{
    ViewBag.Title = "Yeni Talimat Oluştur";
}

<h2>Yeni Talimat Oluştur</h2>

@using (Html.BeginForm("Create", "Instruction", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.BankAccountId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.BankAccountId, (IEnumerable<SelectListItem>)ViewBag.BankAccounts, "Banka Hesabı Seçiniz", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BankAccountId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Cari Hesap", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.ListBox("selectedCustomerBankInfoIds", (MultiSelectList)ViewBag.SelectedCustomerBankInfoIds, new { @class = "form-control" }) 
            @Html.ValidationMessageFor(model => model.YourCustomerBankInfoList, "", new { @class = "text-danger" })

        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.operationTypeID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.operationTypeID, (IEnumerable<SelectListItem>)ViewBag.OperationTypes, "İşlem Türü Seçiniz", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.operationTypeID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Oluştur" class="btn btn-primary" />
        </div>
    </div>
}
